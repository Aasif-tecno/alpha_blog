 <h1 class="font-weight-light mt-4 text-black">Articles</h1>
    <table class="table table-striped table-bordered table-dark table-hover col-sm-4 ">
      <thead>
        <tr>
          <th>User</th>
          <th>TITLE</th>
          <th>DESCRIPTION</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do  |article|%>
        <%# <% if article.user == current_user %>              
        <tr>
          <td><%= article.user.email.split("@")[0].capitalize %></td>
          <td><%= link_to article.title, article_path(article), class:"text-white"%></td>
          <td><%= truncate(article.description, length: 50) %></td> 
          <td><%= time_ago_in_words(article.created_at)%>  
          <td><%= time_ago_in_words(article.updated_at)%>  
          <td><%= link_to "Show", article_path(article), class:"btn btn-primary"%>  
        </tr>
        <% end %>
      </tbody>
      
    </table>
    <%= link_to "Create Articles" , new_article_path, class:"btn btn-primary btn-lg"%>